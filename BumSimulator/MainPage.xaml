													<Button x:Name="Education3Button" Grid.Row="4" Style="{DynamicResource StylePassButton}" Template="{DynamicResource PassButton}">Закінчити ВУЗ (200000 шекелів)</Button>
													<Button x:Name="Education4Button" Grid.Row="5" Style="{DynamicResource StylePassButton}" Template="{DynamicResource PassButton}">Вчитись за кордоном (1 млн. капусти)</Button>
												</Grid>

												<Grid Grid.Row="1">
													<Grid.RowDefinitions>
														<RowDefinition Height="45"/>
														<RowDefinition/>
														<RowDefinition/>
														<RowDefinition/>
														<RowDefinition/>
														<RowDefinition/>
													</Grid.RowDefinitions>

													<Label x:Name="RaitingLabelName" Grid.Row="0" Template="{DynamicResource MainShowLabel}">Рейтинг</Label>
													<Button x:Name="Raiting0Button" Grid.Row="1" Style="{DynamicResource StylePassButton}" Template="{DynamicResource PassButton}">Затусити в клубі (1000 шекелів)</Button>
													<Button x:Name="Raiting1Button" Grid.Row="2" Style="{DynamicResource StylePassButton}" Template="{DynamicResource PassButton}">Купити костюм (50000 шекелів)</Button>
													<Button x:Name="Raiting2Button" Grid.Row="3" Style="{DynamicResource StylePassButton}" Template="{DynamicResource PassButton}">Засвітитись на TV (150000 шекелів)</Button>
